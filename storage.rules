rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Documents folder - allow authenticated users to read, only teachers to write
    match /documents/{lessonId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // In production, check if user is teacher
      allow delete: if request.auth != null; // In production, check if user is teacher
    }
    
    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
